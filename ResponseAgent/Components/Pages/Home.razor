@page "/"
@using ResponseAgent.Services
@inject IFileProcessingService FileProcessingService
@inject IAgentService AgentService
@rendermode InteractiveServer

<PageTitle>ドキュメントQ&Aアシスタント</PageTitle>

<!-- ステージング環境バナー -->
<div style="background: linear-gradient(90deg, #ea580c 0%, #f97316 100%); color: white; padding: 0.75rem; text-align: center; font-weight: bold; z-index: 1001; position: relative;">
    <i class="bi bi-exclamion-triangle-fill"></i> ステージング環境
</div>

<!-- ヘッダー（固定） -->
<div class="app-header-fixed">
    <div class="container-fluid">
        <div class="header-content">
            <div class="header-title">
                <h1>
                    <i class="bi bi-file-earmark-text-fill"></i>
                    ドキュメントQ&Aアシスタント
                </h1>
                <p class="mb-0 mt-1" style="font-size: 0.9rem; opacity: 0.95;">
                    AI を活用した文書質問・応答システム
                </p>
            </div>
            
            <!-- プログレスインジケーター（ヘッダー内） -->
            <div class="progress-inline">
                <div class="progress-step-inline @GetStepClass(1)">
                    <div class="progress-step-circle-inline">
                        @if (currentStep > 1)
                        {
                            <i class="bi bi-check"></i>
                        }
                        else
                        {
                            <span>1</span>
                        }
                    </div>
                    <span class="progress-step-label-inline">ファイル読込</span>
                </div>
                <div class="progress-line-inline @(currentStep > 1 ? "active" : "")"></div>
                
                <div class="progress-step-inline @GetStepClass(2)">
                    <div class="progress-step-circle-inline">
                        @if (currentStep > 2)
                        {
                            <i class="bi bi-check"></i>
                        }
                        else if (currentStep == 2)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <span>2</span>
                        }
                    </div>
                    <span class="progress-step-label-inline">答弁生成</span>
                </div>
                <div class="progress-line-inline @(currentStep > 2 ? "active" : "")"></div>
                
                <div class="progress-step-inline @GetStepClass(3)">
                    <div class="progress-step-circle-inline">
                        @if (currentStep > 3)
                        {
                            <i class="bi bi-check"></i>
                        }
                        else if (currentStep == 3)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                        }
                        else
                        {
                            <span>3</span>
                        }
                    </div>
                    <span class="progress-step-label-inline">レビュー</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ヘッダー分のスペーサー -->
<div class="header-spacer"></div>

<!-- グリッドレイアウト: メイン（2x2） + チャットパネル -->
<div class="main-layout-with-chat">
    
    <!-- メインコンテンツエリア（2x2グリッド） -->
    <div class="main-content-area">
        <div class="grid-layout">
    
    <!-- 左上: ファイルアップロード -->
    <div class="grid-item upload-section">
        <div class="custom-card">
            <div class="card-header-custom">
                <h5>
                    <i class="bi bi-cloud-upload-fill"></i>
                    ドキュメントアップロード
                </h5>
            </div>
            <div class="card-body-custom">
                <div class="upload-area mb-3">
                    <div class="upload-icon">
                        <i class="bi bi-file-earmark-arrow-up"></i>
                    </div>
                    <h5 class="mb-3">ファイルを選択</h5>
                    <p class="text-muted mb-3">
                        Word (.docx) またはテキスト (.txt) ファイルに対応
                    </p>
                    <InputFile OnChange="HandleFileSelected" 
                               class="form-control" 
                               accept=".docx,.txt" 
                               disabled="@isProcessing" />
                    <small class="text-muted d-block mt-2">
                        <i class="bi bi-info-circle"></i> 最大ファイルサイズ: 10MB
                    </small>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert-custom alert-danger-custom">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <div>@errorMessage</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(statusMessage))
                {
                    <div class="alert-custom alert-info-custom">
                        <i class="bi bi-info-circle-fill"></i>
                        <div>@statusMessage</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- 右上: ドキュメント内容 -->
    <div class="grid-item document-section">
        @if (!string.IsNullOrEmpty(extractedQuestion))
        {
            <div class="custom-card">
                <div class="card-header-custom">
                    <h5>
                        <i class="bi bi-file-text-fill"></i>
                        ドキュメント内容
                        <button class="btn btn-icon-copy" @onclick="() => CopyToClipboard(extractedQuestion)" title="コピー">
                            <i class="bi bi-clipboard"></i>
                        </button>
                    </h5>
                </div>
                <div class="card-body-custom">
                    <div class="content-display">
                        @extractedQuestion
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-primary">
                            <i class="bi bi-file-text"></i>
                            @(extractedQuestion.Length) 文字
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- 左下: AI生成回答 -->
    <div class="grid-item response-section">
        @if (!string.IsNullOrEmpty(generatedResponse) || isGenerating)
        {
            <div class="custom-card">
                <div class="card-header-custom">
                    <h5>
                        <i class="bi bi-robot"></i>
                        AI生成回答
                        @if (isGenerating)
                        {
                            <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark ms-2" style="font-size: 0.75rem;">
                                <i class="bi bi-check-circle-fill text-success"></i> 完了
                            </span>
                            <button class="btn btn-icon-copy" @onclick="() => CopyToClipboard(generatedResponse)" title="コピー">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        }
                    </h5>
                </div>
                <div class="card-body-custom">
                    @if (isGenerating)
                    {
                        <div class="loading-overlay">
                            <div class="spinner-custom"></div>
                            <span style="color: var(--primary-color); font-weight: 600;">AIが回答を生成中...</span>
                        </div>
                    }
                    else
                    {
                        <div class="content-display">
                            @generatedResponse
                        </div>
                        
                        <div class="d-flex gap-2 mt-4 flex-wrap align-items-center">
                            <button class="btn btn-secondary-custom btn-custom btn-sm" @onclick="ResetForm">
                                <i class="bi bi-arrow-clockwise"></i>
                                リセット
                            </button>
                            <span class="badge bg-success ms-auto">
                                <i class="bi bi-file-text"></i>
                                @(generatedResponse?.Length ?? 0) 文字
                            </span>
                        </div>
                    }
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(extractedQuestion) && !isProcessing)
        {
            <!-- ドキュメントが読み込まれたが、まだ結果が表示されていない場合のプレースホルダー -->
            <div class="custom-card placeholder-card">
                <div class="card-body-custom card-body-placeholder">
                    <i class="bi bi-robot"></i>
                    <p class="text-muted">
                        AI生成結果がここに表示されます
                    </p>
                </div>
            </div>
        }
    </div>

    <!-- 右下: レビュー結果 -->
    <div class="grid-item review-section">
        @if (!string.IsNullOrEmpty(reviewResult) || isReviewing || !string.IsNullOrEmpty(rewrittenResponse))
        {
            <div class="custom-card">
                <div class="card-header-custom card-header-review">
                    <h5>
                        <i class="bi bi-clipboard-check"></i>
                        @if (string.IsNullOrEmpty(rewrittenResponse))
                        {
                            <span>レビュー結果</span>
                        }
                        else
                        {
                            <span>修正内容</span>
                        }
                        @if (isReviewing || isRewriting)
                        {
                            <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                        }
                        else
                        {
                            <button class="btn btn-icon-copy" @onclick="() => CopyToClipboard(string.IsNullOrEmpty(rewrittenResponse) ? reviewResult : rewrittenResponse)" title="コピー">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        }
                    </h5>
                </div>
                <div class="card-body-custom">
                    @if (isReviewing)
                    {
                        <div class="loading-overlay">
                            <div class="spinner-custom"></div>
                            <span style="color: var(--warning-color); font-weight: 600;">AIがレビュー中...</span>
                        </div>
                    }
                    else if (isRewriting)
                    {
                        <div class="loading-overlay">
                            <div class="spinner-custom"></div>
                            <span style="color: var(--warning-color); font-weight: 600;">AIが修正を実行中...</span>
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(rewrittenResponse))
                    {
                        <!-- 差分表示 -->
                        <DiffDisplay OriginalText="@generatedResponse" ModifiedText="@rewrittenResponse" />
                        
                        <div class="mt-3 d-flex gap-2">
                            <button class="btn btn-sm btn-outline-primary" @onclick="ResetDiff">
                                <i class="bi bi-arrow-left"></i> レビュー結果に戻す
                            </button>
                            <button class="btn btn-sm btn-success" @onclick="() => CopyToClipboard(rewrittenResponse)">
                                <i class="bi bi-check"></i> 修正を採用
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="content-display review-content">
                            @reviewResult
                        </div>
                        
                        <div class="mt-3 d-flex gap-2">
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-file-text"></i>
                                @(reviewResult?.Length ?? 0) 文字
                            </span>
                            @if (!string.IsNullOrEmpty(generatedResponse) && !generatedResponse.StartsWith("エラー"))
                            {
                                <button class="btn btn-sm btn-primary" @onclick="ExecuteRewrite">
                                    <i class="bi bi-pencil-square"></i> 修正を実行
                                </button>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    
        </div>
    </div>

    <!-- 右側: Copilot風チャットパネル -->
    <div class="chat-panel @(isChatCollapsed ? "collapsed" : "")">
        <div class="chat-header">
            <h6>
                <i class="bi bi-chat-dots-fill"></i>
                AI アシスタント
            </h6>
            <button class="btn-collapse" @onclick="ToggleChat" title="@(isChatCollapsed ? "展開" : "折りたたむ")">
                <i class="bi bi-chevron-@(isChatCollapsed ? "left" : "right")"></i>
            </button>
        </div>
        
        <div class="chat-messages" @ref="chatMessagesContainer">
            @if (chatMessages.Count == 0)
            {
                <div class="chat-welcome">
                    <i class="bi bi-lightbulb"></i>
                    <p>画面上の情報について質問できます</p>
                    <small class="text-muted">例: 「この答弁案の要点は？」</small>
                </div>
            }
            else
            {
                @foreach (var message in chatMessages)
                {
                    <div class="chat-message @message.Role">
                        <div class="chat-message-avatar">
                            @if (message.Role == "user")
                            {
                                <i class="bi bi-person-circle"></i>
                            }
                            else
                            {
                                <i class="bi bi-robot"></i>
                            }
                        </div>
                        <div class="chat-message-content">
                            @message.Content
                        </div>
                    </div>
                }
                
                @if (isChatting)
                {
                    <div class="chat-message assistant">
                        <div class="chat-message-avatar">
                            <i class="bi bi-robot"></i>
                        </div>
                        <div class="chat-message-content">
                            <span class="typing-indicator">
                                <span></span><span></span><span></span>
                            </span>
                        </div>
                    </div>
                }
            }
        </div>
        
        <div class="chat-input-area">
            <textarea @bind="chatInput"
                      @onkeydown="HandleChatKeyDown"
                      placeholder="質問を入力..."
                      rows="2"
                      disabled="@isChatting"></textarea>
            <button class="btn-send" @onclick="SendChatMessage" disabled="@(isChatting || string.IsNullOrWhiteSpace(chatInput))">
                @if (isChatting)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                }
                else
                {
                    <i class="bi bi-send-fill"></i>
                }
            </button>
        </div>
    </div>
    
</div>

@code {
private bool isProcessing = false;
private bool isGenerating = false;
private bool isReviewing = false;
private bool isRewriting = false;
private bool isChatting = false;
private bool isChatCollapsed = false;
private int currentStep = 0;
private string? errorMessage;
private string? statusMessage;
private string? extractedQuestion;
private string? generatedResponse;
private string? reviewResult;
private string? rewrittenResponse;
private string chatInput = "";
private List<ChatMessage> chatMessages = new();
private ElementReference chatMessagesContainer;

    public class ChatMessage
    {
        public string Role { get; set; } = "";
        public string Content { get; set; } = "";
    }

    private string GetStepClass(int step)
    {
        if (currentStep > step) return "completed";
        if (currentStep == step) return "active";
        return "";
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        statusMessage = null;
        extractedQuestion = null;
        generatedResponse = null;
        reviewResult = null;
        currentStep = 1;

        var file = e.File;

        if (file == null)
            return;

        // ファイルサイズチェック (10MB制限)
        const long maxFileSize = 10 * 1024 * 1024;
        if (file.Size > maxFileSize)
        {
            errorMessage = "ファイルサイズが大きすぎます。10MB以下のファイルを選択してください。";
            currentStep = 0;
            return;
        }

        try
        {
            isProcessing = true;
            statusMessage = "ファイルを読み込んでいます...";
            await InvokeAsync(StateHasChanged);

            // ファイルからテキストを抽出
            using var stream = file.OpenReadStream(maxFileSize);
            extractedQuestion = await FileProcessingService.ExtractTextFromFileAsync(stream, file.Name);

            if (string.IsNullOrWhiteSpace(extractedQuestion))
            {
                errorMessage = "ファイルからテキストを抽出できませんでした。";
                statusMessage = null;
                currentStep = 0;
                return;
            }

            // ステップ2: 答弁生成
            currentStep = 2;
            statusMessage = "AIエージェントが回答を作成しています...";
            await InvokeAsync(StateHasChanged);

            await GenerateResponseAsync();

            // ステップ3: 自動レビュー
            if (!string.IsNullOrWhiteSpace(generatedResponse) && !generatedResponse.StartsWith("エラー"))
            {
                currentStep = 3;
                statusMessage = "AIがレビューを実行しています...";
                await InvokeAsync(StateHasChanged);

                await ReviewResponseAutomatic();
            }

            // 完了
            currentStep = 4;
            statusMessage = "すべての処理が完了しました。";
        }
        catch (Exception ex)
        {
            errorMessage = $"エラーが発生しました: {ex.Message}";
            statusMessage = null;
            currentStep = 0;
        }
        finally
        {
            isProcessing = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task GenerateResponseAsync()
    {
        try
        {
            isGenerating = true;
            generatedResponse = "生成中...";
            await InvokeAsync(StateHasChanged);

            generatedResponse = await AgentService.GenerateResponseAsync(extractedQuestion!);

            statusMessage = "回答の生成が完了しました。";
        }
        catch (Exception ex)
        {
            errorMessage = $"AI生成中にエラーが発生しました: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task CopyToClipboard(string? content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return;

        statusMessage = "クリップボードにコピーしました。";
        await InvokeAsync(StateHasChanged);
        
        // 3秒後にメッセージをクリア
        await Task.Delay(3000);
        if (statusMessage == "クリップボードにコピーしました。")
        {
            statusMessage = null;
            await InvokeAsync(StateHasChanged);
        }
    }

    private void ResetForm()
    {
        extractedQuestion = null;
        generatedResponse = null;
        reviewResult = null;
        rewrittenResponse = null;
        errorMessage = null;
        statusMessage = null;
        currentStep = 0;
        StateHasChanged();
    }

    private async Task ExecuteRewrite()
    {
        if (string.IsNullOrWhiteSpace(generatedResponse))
            return;

        try
        {
            isRewriting = true;
            rewrittenResponse = null;
            await InvokeAsync(StateHasChanged);

            rewrittenResponse = await AgentService.RewriteResponseAsync(generatedResponse);
        }
        catch (Exception ex)
        {
            errorMessage = $"修正中にエラーが発生しました: {ex.Message}";
        }
        finally
        {
            isRewriting = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private void ResetDiff()
    {
        rewrittenResponse = null;
        StateHasChanged();
    }

    private async Task ReviewResponseAutomatic()
    {
        if (string.IsNullOrWhiteSpace(generatedResponse))
            return;

        try
        {
            isReviewing = true;
            reviewResult = "レビュー中...";
            await InvokeAsync(StateHasChanged);

            reviewResult = await AgentService.ReviewResponseAsync(generatedResponse);
        }
        catch (Exception ex)
        {
            errorMessage = $"レビュー中にエラーが発生しました: {ex.Message}";
        }
        finally
        {
            isReviewing = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task SendChatMessage()
    {
        if (string.IsNullOrWhiteSpace(chatInput))
            return;

        var userMessage = chatInput.Trim();
        chatInput = "";

        // ユーザーメッセージを追加
        chatMessages.Add(new ChatMessage { Role = "user", Content = userMessage });
        await InvokeAsync(StateHasChanged);

        try
        {
            isChatting = true;
            await InvokeAsync(StateHasChanged);

            // コンテキストを構築
            var context = BuildContext();

            // エージェントに送信
            var response = await AgentService.ChatAsync(userMessage, context);

            // アシスタントメッセージを追加
            chatMessages.Add(new ChatMessage { Role = "assistant", Content = response });
        }
        catch (Exception ex)
        {
            chatMessages.Add(new ChatMessage { Role = "assistant", Content = $"エラー: {ex.Message}" });
        }
        finally
        {
            isChatting = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private string BuildContext()
    {
        var contextParts = new List<string>();

        if (!string.IsNullOrWhiteSpace(extractedQuestion))
        {
            contextParts.Add($"【ドキュメント内容】\n{extractedQuestion}");
        }

        if (!string.IsNullOrWhiteSpace(generatedResponse))
        {
            contextParts.Add($"【AI生成回答】\n{generatedResponse}");
        }

        if (!string.IsNullOrWhiteSpace(reviewResult))
        {
            contextParts.Add($"【レビュー結果】\n{reviewResult}");
        }

        return string.Join("\n\n", contextParts);
    }

    private async Task HandleChatKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            await SendChatMessage();
        }
    }

    private void ToggleChat()
    {
        isChatCollapsed = !isChatCollapsed;
        StateHasChanged();
    }
}
