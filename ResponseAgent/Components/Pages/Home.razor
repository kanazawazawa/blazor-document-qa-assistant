@page "/"
@using ResponseAgent.Services
@inject IFileProcessingService FileProcessingService
@inject IAgentService AgentService
@rendermode InteractiveServer

<PageTitle>ドキュメントQ&Aアシスタント</PageTitle>

<!-- ヘッダー -->
<div class="app-header">
    <div class="container">
        <h1>
            <i class="bi bi-file-earmark-text-fill"></i>
            ドキュメントQ&Aアシスタント
        </h1>
        <p class="mb-0 mt-2" style="font-size: 1rem; opacity: 0.95;">
            AI を活用した文書質問・応答システム
        </p>
    </div>
</div>

<!-- 2ペインレイアウト -->
<div class="two-pane-layout">
    
    <!-- 左ペイン: ドキュメントアップロード・プレビュー -->
    <div class="left-pane">
        
        <!-- ファイルアップロードカード -->
        <div class="custom-card">
            <div class="card-header-custom">
                <h5>
                    <i class="bi bi-cloud-upload-fill"></i>
                    ドキュメントアップロード
                </h5>
            </div>
            <div class="card-body-custom">
                <div class="upload-area mb-3">
                    <div class="upload-icon">
                        <i class="bi bi-file-earmark-arrow-up"></i>
                    </div>
                    <h5 class="mb-3">ファイルを選択</h5>
                    <p class="text-muted mb-3">
                        Word (.docx) またはテキスト (.txt) ファイルに対応
                    </p>
                    <InputFile OnChange="HandleFileSelected" 
                               class="form-control" 
                               accept=".docx,.txt" 
                               disabled="@isProcessing" />
                    <small class="text-muted d-block mt-2">
                        <i class="bi bi-info-circle"></i> 最大ファイルサイズ: 10MB
                    </small>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert-custom alert-danger-custom">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <div>@errorMessage</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(statusMessage))
                {
                    <div class="alert-custom alert-info-custom">
                        <i class="bi bi-info-circle-fill"></i>
                        <div>@statusMessage</div>
                    </div>
                }

                @if (isProcessing)
                {
                    <div class="loading-overlay">
                        <div class="spinner-custom"></div>
                        <span style="color: var(--primary-color); font-weight: 600;">処理中...</span>
                    </div>
                }
            </div>
        </div>

        <!-- アップロード済みドキュメントのプレビュー -->
        @if (!string.IsNullOrEmpty(extractedQuestion))
        {
            <div class="custom-card">
                <div class="card-header-custom">
                    <h5>
                        <i class="bi bi-file-text-fill"></i>
                        ドキュメント内容
                    </h5>
                </div>
                <div class="card-body-custom">
                    <div class="content-display">
                        @extractedQuestion
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-primary">
                            <i class="bi bi-file-text"></i>
                            @(extractedQuestion.Length) 文字
                        </span>
                    </div>
                </div>
            </div>
        }
        
    </div>

    <!-- 右ペイン: 処理結果表示 -->
    <div class="right-pane">
        
        @if (!string.IsNullOrEmpty(generatedResponse) || isGenerating)
        {
            <div class="custom-card">
                <div class="card-header-custom">
                    <h5>
                        <i class="bi bi-robot"></i>
                        AI生成回答
                        @if (isGenerating)
                        {
                            <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark ms-2" style="font-size: 0.75rem;">
                                <i class="bi bi-check-circle-fill text-success"></i> 完了
                            </span>
                        }
                    </h5>
                </div>
                <div class="card-body-custom">
                    @if (isGenerating)
                    {
                        <div class="loading-overlay">
                            <div class="spinner-custom"></div>
                            <span style="color: var(--primary-color); font-weight: 600;">AIが回答を生成中...</span>
                        </div>
                    }
                    else
                    {
                        <div class="content-display">
                            @generatedResponse
                        </div>
                        
                        <div class="d-flex gap-3 mt-4">
                            <button class="btn btn-primary-custom btn-custom" @onclick="CopyToClipboard">
                                <i class="bi bi-clipboard-check"></i>
                                クリップボードにコピー
                            </button>
                            <button class="btn btn-secondary-custom btn-custom" @onclick="ResetForm">
                                <i class="bi bi-arrow-clockwise"></i>
                                新しいドキュメントを処理
                            </button>
                        </div>

                        <div class="mt-3">
                            <span class="badge bg-success">
                                <i class="bi bi-file-text"></i>
                                @(generatedResponse.Length) 文字
                            </span>
                        </div>
                    }
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(extractedQuestion) && !isProcessing)
        {
            <!-- ドキュメントが読み込まれたが、まだ結果が表示されていない場合のプレースホルダー -->
            <div class="custom-card placeholder-card">
                <div class="card-body-custom card-body-placeholder">
                    <i class="bi bi-robot"></i>
                    <p class="text-muted">
                        AI生成結果がここに表示されます
                    </p>
                </div>
            </div>
        }
        else
        {
            <!-- 初期状態のプレースホルダー（非表示） -->
        }
        
    </div>
    
</div>

@code {
    private bool isProcessing = false;
    private bool isGenerating = false;
    private string? errorMessage;
    private string? statusMessage;
    private string? extractedQuestion;
    private string? generatedResponse;

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        statusMessage = null;
        extractedQuestion = null;
        generatedResponse = null;

        var file = e.File;

        if (file == null)
            return;

        // ファイルサイズチェック (10MB制限)
        const long maxFileSize = 10 * 1024 * 1024;
        if (file.Size > maxFileSize)
        {
            errorMessage = "ファイルサイズが大きすぎます。10MB以下のファイルを選択してください。";
            return;
        }

        try
        {
            isProcessing = true;
            statusMessage = "ファイルを読み込んでいます...";
            await InvokeAsync(StateHasChanged);

            // ファイルからテキストを抽出
            using var stream = file.OpenReadStream(maxFileSize);
            extractedQuestion = await FileProcessingService.ExtractTextFromFileAsync(stream, file.Name);

            if (string.IsNullOrWhiteSpace(extractedQuestion))
            {
                errorMessage = "ファイルからテキストを抽出できませんでした。";
                statusMessage = null;
                return;
            }

            statusMessage = "AIエージェントが回答を作成しています...";
            await InvokeAsync(StateHasChanged);

            // AIエージェントで回答を生成
            await GenerateResponseAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"エラーが発生しました: {ex.Message}";
            statusMessage = null;
        }
        finally
        {
            isProcessing = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task GenerateResponseAsync()
    {
        try
        {
            isGenerating = true;
            generatedResponse = "生成中...";
            await InvokeAsync(StateHasChanged);

            generatedResponse = await AgentService.GenerateResponseAsync(extractedQuestion!);

            statusMessage = "回答の生成が完了しました。";
        }
        catch (Exception ex)
        {
            errorMessage = $"AI生成中にエラーが発生しました: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task CopyToClipboard()
    {
        statusMessage = "回答をクリップボードにコピーしました（ブラウザの機能を使用してください）。";
        await InvokeAsync(StateHasChanged);
    }

    private void ResetForm()
    {
        extractedQuestion = null;
        generatedResponse = null;
        errorMessage = null;
        statusMessage = null;
        StateHasChanged();
    }
}
