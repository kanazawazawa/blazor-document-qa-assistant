@page "/"
@using ResponseAgent.Services
@inject IFileProcessingService FileProcessingService
@inject IAgentService AgentService
@rendermode InteractiveServer

<PageTitle>ドキュメントQ&Aアシスタント</PageTitle>

<!-- ヘッダー -->
<div class="app-header">
    <div class="container">
        <h1>
            <i class="bi bi-file-earmark-text-fill"></i>
            ドキュメントQ&Aアシスタント
        </h1>
        <p class="mb-0 mt-2" style="font-size: 1rem; opacity: 0.95;">
            AI を活用した文書質問・応答システム
        </p>
    </div>
</div>

<!-- プログレスインジケーター -->
@if (showProgress)
{
    <div class="progress-container">
        <div class="progress-bar-wrapper">
            <div class="progress-step @GetStepClass(1)">
                <div class="progress-step-circle">
                    @if (currentStep > 1)
                    {
                        <i class="bi bi-check"></i>
                    }
                    else
                    {
                        <span>1</span>
                    }
                </div>
                <div class="progress-step-label">ファイル読込</div>
            </div>
            <div class="progress-line @(currentStep > 1 ? "active" : "")"></div>
            
            <div class="progress-step @GetStepClass(2)">
                <div class="progress-step-circle">
                    @if (currentStep > 2)
                    {
                        <i class="bi bi-check"></i>
                    }
                    else if (currentStep == 2)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    else
                    {
                        <span>2</span>
                    }
                </div>
                <div class="progress-step-label">答弁生成</div>
            </div>
            <div class="progress-line @(currentStep > 2 ? "active" : "")"></div>
            
            <div class="progress-step @GetStepClass(3)">
                <div class="progress-step-circle">
                    @if (currentStep > 3)
                    {
                        <i class="bi bi-check"></i>
                    }
                    else if (currentStep == 3)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    else
                    {
                        <span>3</span>
                    }
                </div>
                <div class="progress-step-label">レビュー</div>
            </div>
        </div>
    </div>
}

<!-- グリッドレイアウト: 2x2 -->
<div class="grid-layout">
    
    <!-- 左上: ファイルアップロード -->
    <div class="grid-item upload-section">
        <div class="custom-card">
            <div class="card-header-custom">
                <h5>
                    <i class="bi bi-cloud-upload-fill"></i>
                    ドキュメントアップロード
                </h5>
            </div>
            <div class="card-body-custom">
                <div class="upload-area mb-3">
                    <div class="upload-icon">
                        <i class="bi bi-file-earmark-arrow-up"></i>
                    </div>
                    <h5 class="mb-3">ファイルを選択</h5>
                    <p class="text-muted mb-3">
                        Word (.docx) またはテキスト (.txt) ファイルに対応
                    </p>
                    <InputFile OnChange="HandleFileSelected" 
                               class="form-control" 
                               accept=".docx,.txt" 
                               disabled="@isProcessing" />
                    <small class="text-muted d-block mt-2">
                        <i class="bi bi-info-circle"></i> 最大ファイルサイズ: 10MB
                    </small>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert-custom alert-danger-custom">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <div>@errorMessage</div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(statusMessage))
                {
                    <div class="alert-custom alert-info-custom">
                        <i class="bi bi-info-circle-fill"></i>
                        <div>@statusMessage</div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- 右上: ドキュメント内容 -->
    <div class="grid-item document-section">
        @if (!string.IsNullOrEmpty(extractedQuestion))
        {
            <div class="custom-card">
                <div class="card-header-custom">
                    <h5>
                        <i class="bi bi-file-text-fill"></i>
                        ドキュメント内容
                        <button class="btn btn-icon-copy" @onclick="() => CopyToClipboard(extractedQuestion)" title="コピー">
                            <i class="bi bi-clipboard"></i>
                        </button>
                    </h5>
                </div>
                <div class="card-body-custom">
                    <div class="content-display">
                        @extractedQuestion
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-primary">
                            <i class="bi bi-file-text"></i>
                            @(extractedQuestion.Length) 文字
                        </span>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- 左下: AI生成回答 -->
    <div class="grid-item response-section">
        @if (!string.IsNullOrEmpty(generatedResponse) || isGenerating)
        {
            <div class="custom-card">
                <div class="card-header-custom">
                    <h5>
                        <i class="bi bi-robot"></i>
                        AI生成回答
                        @if (isGenerating)
                        {
                            <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark ms-2" style="font-size: 0.75rem;">
                                <i class="bi bi-check-circle-fill text-success"></i> 完了
                            </span>
                            <button class="btn btn-icon-copy" @onclick="() => CopyToClipboard(generatedResponse)" title="コピー">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        }
                    </h5>
                </div>
                <div class="card-body-custom">
                    @if (isGenerating)
                    {
                        <div class="loading-overlay">
                            <div class="spinner-custom"></div>
                            <span style="color: var(--primary-color); font-weight: 600;">AIが回答を生成中...</span>
                        </div>
                    }
                    else
                    {
                        <div class="content-display">
                            @generatedResponse
                        </div>
                        
                        <div class="d-flex gap-2 mt-4 flex-wrap align-items-center">
                            <button class="btn btn-secondary-custom btn-custom btn-sm" @onclick="ResetForm">
                                <i class="bi bi-arrow-clockwise"></i>
                                リセット
                            </button>
                            <span class="badge bg-success ms-auto">
                                <i class="bi bi-file-text"></i>
                                @(generatedResponse.Length) 文字
                            </span>
                        </div>
                    }
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(extractedQuestion) && !isProcessing)
        {
            <!-- ドキュメントが読み込まれたが、まだ結果が表示されていない場合のプレースホルダー -->
            <div class="custom-card placeholder-card">
                <div class="card-body-custom card-body-placeholder">
                    <i class="bi bi-robot"></i>
                    <p class="text-muted">
                        AI生成結果がここに表示されます
                    </p>
                </div>
            </div>
        }
    </div>

    <!-- 右下: レビュー結果 -->
    <div class="grid-item review-section">
        @if (!string.IsNullOrEmpty(reviewResult) || isReviewing)
        {
            <div class="custom-card">
                <div class="card-header-custom card-header-review">
                    <h5>
                        <i class="bi bi-clipboard-check"></i>
                        レビュー結果
                        @if (isReviewing)
                        {
                            <span class="spinner-border spinner-border-sm ms-2" role="status"></span>
                        }
                        else
                        {
                            <button class="btn btn-icon-copy" @onclick="() => CopyToClipboard(reviewResult)" title="コピー">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        }
                    </h5>
                </div>
                <div class="card-body-custom">
                    @if (isReviewing)
                    {
                        <div class="loading-overlay">
                            <div class="spinner-custom"></div>
                            <span style="color: var(--warning-color); font-weight: 600;">AIがレビュー中...</span>
                        </div>
                    }
                    else
                    {
                        <div class="content-display review-content">
                            @reviewResult
                        </div>
                        
                        <div class="mt-3">
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-file-text"></i>
                                @(reviewResult?.Length ?? 0) 文字
                            </span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
    
</div>

@code {
private bool isProcessing = false;
private bool isGenerating = false;
private bool isReviewing = false;
private bool showProgress = false;
private int currentStep = 0;
private string? errorMessage;
private string? statusMessage;
private string? extractedQuestion;
private string? generatedResponse;
private string? reviewResult;

    private string GetStepClass(int step)
    {
        if (currentStep > step) return "completed";
        if (currentStep == step) return "active";
        return "";
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        errorMessage = null;
        statusMessage = null;
        extractedQuestion = null;
        generatedResponse = null;
        reviewResult = null;
        showProgress = true;
        currentStep = 1;

        var file = e.File;

        if (file == null)
            return;

        // ファイルサイズチェック (10MB制限)
        const long maxFileSize = 10 * 1024 * 1024;
        if (file.Size > maxFileSize)
        {
            errorMessage = "ファイルサイズが大きすぎます。10MB以下のファイルを選択してください。";
            showProgress = false;
            return;
        }

        try
        {
            isProcessing = true;
            statusMessage = "ファイルを読み込んでいます...";
            await InvokeAsync(StateHasChanged);

            // ファイルからテキストを抽出
            using var stream = file.OpenReadStream(maxFileSize);
            extractedQuestion = await FileProcessingService.ExtractTextFromFileAsync(stream, file.Name);

            if (string.IsNullOrWhiteSpace(extractedQuestion))
            {
                errorMessage = "ファイルからテキストを抽出できませんでした。";
                statusMessage = null;
                showProgress = false;
                currentStep = 0;
                return;
            }

            // ステップ2: 答弁生成
            currentStep = 2;
            statusMessage = "AIエージェントが回答を作成しています...";
            await InvokeAsync(StateHasChanged);

            await GenerateResponseAsync();

            // ステップ3: 自動レビュー
            if (!string.IsNullOrWhiteSpace(generatedResponse) && !generatedResponse.StartsWith("エラー"))
            {
                currentStep = 3;
                statusMessage = "AIがレビューを実行しています...";
                await InvokeAsync(StateHasChanged);

                await ReviewResponseAutomatic();
            }

            // 完了
            currentStep = 4;
            statusMessage = "すべての処理が完了しました。";
        }
        catch (Exception ex)
        {
            errorMessage = $"エラーが発生しました: {ex.Message}";
            statusMessage = null;
            showProgress = false;
            currentStep = 0;
        }
        finally
        {
            isProcessing = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task GenerateResponseAsync()
    {
        try
        {
            isGenerating = true;
            generatedResponse = "生成中...";
            await InvokeAsync(StateHasChanged);

            generatedResponse = await AgentService.GenerateResponseAsync(extractedQuestion!);

            statusMessage = "回答の生成が完了しました。";
        }
        catch (Exception ex)
        {
            errorMessage = $"AI生成中にエラーが発生しました: {ex.Message}";
        }
        finally
        {
            isGenerating = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task CopyToClipboard(string? content)
    {
        if (string.IsNullOrWhiteSpace(content))
            return;

        statusMessage = "クリップボードにコピーしました。";
        await InvokeAsync(StateHasChanged);
        
        // 3秒後にメッセージをクリア
        await Task.Delay(3000);
        if (statusMessage == "クリップボードにコピーしました。")
        {
            statusMessage = null;
            await InvokeAsync(StateHasChanged);
        }
    }

    private void ResetForm()
    {
        extractedQuestion = null;
        generatedResponse = null;
        reviewResult = null;
        errorMessage = null;
        statusMessage = null;
        showProgress = false;
        currentStep = 0;
        StateHasChanged();
    }

    private async Task ReviewResponseAutomatic()
    {
        if (string.IsNullOrWhiteSpace(generatedResponse))
            return;

        try
        {
            isReviewing = true;
            reviewResult = "レビュー中...";
            await InvokeAsync(StateHasChanged);

            reviewResult = await AgentService.ReviewResponseAsync(generatedResponse);
        }
        catch (Exception ex)
        {
            errorMessage = $"レビュー中にエラーが発生しました: {ex.Message}";
        }
        finally
        {
            isReviewing = false;
            await InvokeAsync(StateHasChanged);
        }
    }
}
